        <costList>
            <ComponentSpacer>1</ComponentSpacer>
            <Plasteel>30</Plasteel>
        </costList>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/CapacitorHelmet/CapacitorHelmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <tags>
                <li>RE_Visors</li>
            </tags>
        </apparel>
        <thingSetMakerTags>
            <li>RE_Visors</li>
        </thingSetMakerTags>
    </ThingDef>

</Defs>