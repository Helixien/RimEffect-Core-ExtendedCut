<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef Name="RE_VisorCraftableBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>RE_ManufacturingBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>14</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Ultra</techLevel>
	<equippedStatOffsets>
		<ShootingAccuracyPawn>0.10</ShootingAccuracyPawn>
	</equippedStatOffsets>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-3</Beauty>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <burnableByRecipe>true</burnableByRecipe>
    <smeltable>true</smeltable>
    <comps>
	  <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
	</ThingDef>

    <ThingDef ParentName="RE_VisorCraftableBase">
        <defName>RE_Apparel_CapacitorHelmet</defName>
        <label>capacitor helmet</label>
        <description>This helmet stores microcapacitors in its structure to replenish spent kinetic barriers. The transpari-plast armor panel on its top can be removed to access capacitors for field maintenance..</description>
        <techLevel>Ultra</techLevel>
        <recipeMaker>
            <researchPrerequisite>RE_AllianceArmoury</researchPrerequisite>
            <skillRequirements>
                <Crafting>7</Crafting>
            </skillRequirements>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Apparel/CapacitorHelmet/CapacitorHelmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.25</uiIconScale>
        <tradeTags>
            <li>RE_Visors</li>
        </tradeTags>
        <generateCommonality>2</generateCommonality>
        <statBases>
            <WorkToMake>14000</WorkToMake>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>1.5</Mass>
            <Flammability>0.4</Flammability>
            <ArmorRating_Sharp>0.0</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.0</ArmorRating_Blunt>
            <ArmorRating_Heat>0.0</ArmorRating_Heat>
            <Insulation_Cold>2</Insulation_Cold>
            <Insulation_Heat>1</Insulation_Heat>
            <EquipDelay>2</EquipDelay>
        </statBases>
	    <equippedStatOffsets>
		    <ShootingAccuracyPawn>0.07</ShootingAccuracyPawn>
	    </equippedStatOffsets>
        <costList>
            <ComponentSpacer>2</ComponentSpacer>
            <Plasteel>40</Plasteel>
        </costList>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/CapacitorHelmet/CapacitorHelmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <tags>
                <li>RE_Visors</li>
            </tags>
        </apparel>
        <thingSetMakerTags>
            <li>RE_Visors</li>
        </thingSetMakerTags>
    </ThingDef>

    <ThingDef ParentName="RE_VisorCraftableBase">
