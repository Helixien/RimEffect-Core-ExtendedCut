<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--============================== Wall Lights ==============================-->
	<ThingDef ParentName="BuildingBase">
		<defName>RE_PreFabWallLight</defName>
		<label>prefab wall light</label>
		<description>A wall light that lights an area in a red color.</description>
		<thingClass>RimEffectExtendedCut.Building_WallLight</thingClass>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Building/Furniture/PreFabWallLight/PreFabWallLight</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>1.1,1.1</drawSize>
		</graphicData>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<passability>Standable</passability>
		<fillPercent>0.20</fillPercent>
		<statBases>
			<MaxHitPoints>10</MaxHitPoints>
			<WorkToBuild>100</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Mass>2</Mass>
		</statBases>
		<size>(1, 1)</size>
		<placeWorkers>
			<li>RimEffectExtendedCut.PlaceWorker_OnWall</li>
		</placeWorkers>
		<costList>
			<Steel>20</Steel>
		</costList>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<building>
			<isInert>true</isInert>
			<isEdifice>false</isEdifice>
			<canPlaceOverWall>true</canPlaceOverWall>
			<allowWireConnection>false</allowWireConnection>
			<spawnedConceptLearnOpportunity>RE_PrefabWallLamps</spawnedConceptLearnOpportunity>
			<boughtConceptLearnOpportunity>RE_PrefabWallLamps</boughtConceptLearnOpportunity>
		</building>
		<designationCategory>Furniture</designationCategory>
		<rotatable>true</rotatable>
		<selectable>true</selectable>
		<destroyable>true</destroyable>
		<clearBuildingArea>false</clearBuildingArea>
		<canOverlapZones>true</canOverlapZones>
		<researchPrerequisites>
			<li>ColoredLights</li>
			<li>Electricity</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>15</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable" />
			<li Class="RimEffectExtendedCut.CompProperties_GlowerExtended">
				<spawnGlowerInFacedCell>true</spawnGlowerInFacedCell>
				<colorOptions>
					<li>
						<glowRadius>8</glowRadius>
						<glowColor>(152,167,250,0)</glowColor>
						<colorLabel>blue</colorLabel>
						<texPath>Things/Building/Furniture/PreFabWallLight/PreFabWallLight</texPath>
					</li>
					<li>
						<glowRadius>8</glowRadius>
						<glowColor>(244,182,115,0)</glowColor>
						<colorLabel>orange</colorLabel>
						<texPath>Things/Building/Furniture/PreFabWallLightOrange/PreFabWallLightOrange</texPath>
					</li>
				</colorOptions>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase">
    <defName>RE_WallLightDummy</defName>
    <label>dummy</label>
    <description>dummy</description>
    <graphicData>
      <texPath>Things/Building/Misc/PartySpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
    </statBases>
    <rotatable>false</rotatable>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>False</useHitPoints>
    <designationCategory>Misc</designationCategory>
    <passability>Standable</passability>
    <building>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <designationHotKey>Misc11</designationHotKey>
  </ThingDef>

	<!--============================== Outdoor Lamps ==============================-->
	<ThingDef Abstract="True" Name="RE_PrefabOutdoorLampBase" ParentName="BuildingBase">
		<thingClass>Building</thingClass>
		<category>Building</category>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<selectable>true</selectable>
		<fillPercent>0.20</fillPercent>
		<pathCost>14</pathCost>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<designationCategory>Furniture</designationCategory>
		<rotatable>false</rotatable>
		<uiIconOffset>(0, 0.03)</uiIconOffset>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.3, 0.6, 0.3)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<comps>
			<li Class="CompProperties_Flickable"/>
		</comps>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>300</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef ParentName="RE_PrefabOutdoorLampBase" >
		<defName>RE_PrefabOutdoorLamp</defName>
		<label>prefab outdoor lamp</label>
		<description>An electrical standing lamp that lights an area. People need light to move and work at full speed.</description>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Building/Furniture/PreFabOutdoorLamp/PreFabOutdoorLamp</texPath>
			<drawSize>(0.8,0.8)</drawSize>
		</graphicData>
		<costList>
			<Steel>20</Steel>
		</costList>
		<statBases>
			<Mass>4</Mass>
		</statBases>
		<building>
			<spawnedConceptLearnOpportunity>RE_PrefabOutdoorLampsPower</spawnedConceptLearnOpportunity>
			<boughtConceptLearnOpportunity>RE_PrefabOutdoorLampsPower</boughtConceptLearnOpportunity>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<researchPrerequisites>
			<li>RE_BasicPrefabrication</li>
			<li>Batteries</li>
		</researchPrerequisites>
		<comps>
			<li Class="RimEffectExtendedCut.CompProperties_GlowerExtended">
				<colorOptions>
					<li>
						<glowRadius>7</glowRadius>
						<glowColor>(152,167,250,0)</glowColor>
						<colorLabel>blue</colorLabel>
						<texPath>Things/Building/Furniture/PreFabOutdoorLamp/PreFabOutdoorLamp</texPath>
					</li>
					<li>
						<glowRadius>7</glowRadius>
						<glowColor>(244,182,115,0)</glowColor>
						<colorLabel>orange</colorLabel>
						<texPath>Things/Building/Furniture/PreFabOutdoorLampOrange/PreFabOutdoorLampOrange</texPath>
					</li>
				</colorOptions>
			</li>
			<li Class="RimEffectExtendedCut.CompProperties_OutDoorLamp">
				<storedEnergyMax>50</storedEnergyMax>
				<selfCharging>30</selfCharging>
				<maxSolarPowerGain>300</maxSolarPowerGain>
				<efficiency>0.5</efficiency>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
		</comps>
	</ThingDef>

</Defs>