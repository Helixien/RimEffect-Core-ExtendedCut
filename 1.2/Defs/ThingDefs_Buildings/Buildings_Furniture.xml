<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>RE_PreFabWallLight</defName>
        <label>prefab wall light</label>
        <description>A wall light that lights an area in a red color.</description>
        <thingClass>RimEffectExtendedCut.Building_WallLight</thingClass>
        <tickerType>Normal</tickerType>
        <graphicData>
            <texPath>Things/Building/Furniture/PreFabWallLight/PreFabWallLight</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>1.1,1.1</drawSize>
        </graphicData>
        <altitudeLayer>MoteOverhead</altitudeLayer>
        <passability>Standable</passability>
        <fillPercent>0.20</fillPercent>
        <statBases>
            <MaxHitPoints>10</MaxHitPoints>
            <WorkToBuild>100</WorkToBuild>
            <Flammability>1.0</Flammability>
            <Mass>2</Mass>
        </statBases>
        <size>(1, 1)</size>
        <placeWorkers>
            <li>RimEffectExtendedCut.PlaceWorker_OnWall</li>
        </placeWorkers>
        <costList>
            <Steel>20</Steel>
        </costList>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <building>
            <isInert>true</isInert>
            <isEdifice>false</isEdifice>
            <canPlaceOverWall>true</canPlaceOverWall>
            <allowWireConnection>false</allowWireConnection>
        </building>
        <designationCategory>Furniture</designationCategory>
        <rotatable>true</rotatable>
        <selectable>true</selectable>
        <destroyable>true</destroyable>
        <clearBuildingArea>false</clearBuildingArea>
        <canOverlapZones>true</canOverlapZones>
        <researchPrerequisites>
            <li>ColoredLights</li>
            <li>Electricity</li>
        </researchPrerequisites>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>15</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="RimEffectExtendedCut.CompProperties_GlowerExtended">
                <colorOptions>
                    <li>
                        <glowRadius>8</glowRadius>
                        <glowColor>(152,167,250,0)</glowColor>
                        <colorLabel>blue</colorLabel>
                        <texPath>Things/Building/Furniture/PreFabWallLight/PreFabWallLight</texPath>
                    </li>
                    <li>
                        <glowRadius>8</glowRadius>
                        <glowColor>(244,182,115,0)</glowColor>
                        <colorLabel>orange</colorLabel>
                        <texPath>Things/Building/Furniture/PreFabWallLightOrange/PreFabWallLightOrange</texPath>
                    </li>
                </colorOptions>
            </li>
        </comps>
    </ThingDef>
	
	<ThingDef ParentName="BuildingBase">
		<defName>RE_PrefabHoloTable</defName>
		<label>prefab holo table</label>
		<description>People eat off tables when chairs are placed facing them.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/PrefabHoloTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(5,5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<thingClass>Building</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<defaultPlacingRot>South</defaultPlacingRot>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<designationCategory>Joy</designationCategory>
		<pathCost>42</pathCost>
		<fillPercent>0.4</fillPercent>
		<socialPropernessMatters>true</socialPropernessMatters>
		<canOverlapZones>false</canOverlapZones>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<uiIconScale>0.8</uiIconScale>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Mass>10</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>1</Beauty>
		</statBases>
		<size>(3,3)</size>
		<costStuffCount>50</costStuffCount>
		<rotatable>false</rotatable>
		<building>
			<joyKind>Television</joyKind>
			<spawnedConceptLearnOpportunity>TVForSickPeople</spawnedConceptLearnOpportunity>
			<boughtConceptLearnOpportunity>TVForSickPeople</boughtConceptLearnOpportunity>
			<watchBuildingStandDistanceRange>2~4</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>9</watchBuildingStandRectWidth>
			<watchBuildingInSameRoom>true</watchBuildingInSameRoom>
			<effectWatching>WatchingTelevision</effectWatching>
		</building>
		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
		</placeWorkers>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>4</glowRadius>
				<glowColor>(103,133,157,0)</glowColor>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>200</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
	</ThingDef>
	
