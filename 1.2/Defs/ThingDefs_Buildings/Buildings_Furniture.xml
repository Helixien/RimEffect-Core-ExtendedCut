<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="BuildingBase">
		<defName>RE_PrefabHoloTable</defName>
		<label>holo table</label>
		<description>People eat off tables when chairs are placed facing them.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/PrefabHoloTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(5,5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<thingClass>Building</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<designationCategory>Joy</designationCategory>
		<pathCost>42</pathCost>
		<fillPercent>0.4</fillPercent>
		<socialPropernessMatters>true</socialPropernessMatters>
		<canOverlapZones>false</canOverlapZones>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<uiIconScale>0.8</uiIconScale>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Mass>10</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>1</Beauty>
		</statBases>
		<size>(3,3)</size>
		<costStuffCount>50</costStuffCount>
		<rotatable>false</rotatable>
		<building>
			<joyKind>Television</joyKind>
			<spawnedConceptLearnOpportunity>TVForSickPeople</spawnedConceptLearnOpportunity>
			<boughtConceptLearnOpportunity>TVForSickPeople</boughtConceptLearnOpportunity>
			<watchBuildingStandDistanceRange>2~4</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>9</watchBuildingStandRectWidth>
			<watchBuildingInSameRoom>true</watchBuildingInSameRoom>
			<effectWatching>WatchingTelevision</effectWatching>
		</building>
		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
		</placeWorkers>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>4</glowRadius>
				<glowColor>(103,133,157,0)</glowColor>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>200</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
	</ThingDef>

</Defs>