<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>RE_WarzoneTable</defName>
		<label>warzone table</label>
		<description>A soft-topped bounded table for playing a variety of billiards-type games. It trains shooting ability.</description>
		<graphicData>
			<texPath>Things/Building/Joy/WarzoneTable/ActiveWarzoneTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4,6)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<staticSunShadowHeight>0.2</staticSunShadowHeight>
		<castEdgeShadows>True</castEdgeShadows>
		<altitudeLayer>Building</altitudeLayer>
		<socialPropernessMatters>true</socialPropernessMatters>
		<fillPercent>0.40</fillPercent>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<building>
			<joyKind>Gaming_Dexterity</joyKind>
			<buildingSizeCategory>Medium</buildingSizeCategory>
		</building>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>12000</WorkToBuild>
			<Mass>60</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>0</Beauty>
			<JoyGainFactor>1.3</JoyGainFactor>
		</statBases>
		<size>(2,4)</size>
		<comps>
			<li Class="RimEffectExtendedCut.CompProperties_BattleTable">
				<interactionCellOffsets>
					<li>(2,0,0)</li>
					<li>(0,0,1)</li>
				</interactionCellOffsets>
			</li>
		</comps>
		<costStuffCount>80</costStuffCount>
		<costList>
			<Cloth>80</Cloth>
			<WoodLog>30</WoodLog>
		</costList>
		<pathCost>42</pathCost>
		<passability>PassThroughOnly</passability>
		<designationCategory>Joy</designationCategory>
		<designationHotKey>Misc3</designationHotKey>
		<canOverlapZones>false</canOverlapZones>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>RE_HolovisionTable</defName>
		<label>holovision table</label>
		<description>A round, high-tech holovision table. Gigantic, hyper-vibrant hologramss rotate around the center on the users wish. Very entertaining. Both connects to Alliance media networks and picks up transmissions from ancient satellites and ubiquitous data cards.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/PrefabHoloTable</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(5,5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<thingClass>Building</thingClass>
		<thingCategories>
			<li>BuildingsJoy</li>
		</thingCategories>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<defaultPlacingRot>South</defaultPlacingRot>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<designationCategory>Joy</designationCategory>
		<pathCost>42</pathCost>
		<fillPercent>0.4</fillPercent>
		<socialPropernessMatters>true</socialPropernessMatters>
		<canOverlapZones>false</canOverlapZones>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<uiIconScale>0.8</uiIconScale>
		<thingSetMakerTags>
			<li>RewardStandardLowFreq</li>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Mass>10</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>1</Beauty>
			<JoyGainFactor>1.4</JoyGainFactor>
		</statBases>
		<costList>
			<Steel>25</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
			<RE_PrefabComponent>3</RE_PrefabComponent>
		</costList>
		<rotatable>false</rotatable>
		<building>
			<joyKind>RE_Holovision</joyKind>
			<watchBuildingStandDistanceRange>1~3</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>9</watchBuildingStandRectWidth>
			<watchBuildingInSameRoom>true</watchBuildingInSameRoom>
			<effectWatching>RE_WatchingHolovision</effectWatching>
		</building>
		<passability>PassThroughOnly</passability>
		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
		</placeWorkers>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>4</glowRadius>
				<glowColor>(103,133,157,0)</glowColor>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>450</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
	</ThingDef>

</Defs>