<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="FurnitureWithQualityBase">
        <defName>RE_WarzoneTable</defName>
        <label>warzone table</label>
        <description>A soft-topped bounded table for playing a variety of billiards-type games. It trains shooting ability.</description>
        <graphicData>
            <texPath>Things/Building/Joy/WarzoneTable/ActiveWarzoneTable</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(4,6)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <staticSunShadowHeight>0.2</staticSunShadowHeight>
        <castEdgeShadows>True</castEdgeShadows>
        <altitudeLayer>Building</altitudeLayer>
        <socialPropernessMatters>true</socialPropernessMatters>
        <fillPercent>0.40</fillPercent>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <building>
            <joyKind>Gaming_Dexterity</joyKind>
            <buildingSizeCategory>Medium</buildingSizeCategory>
        </building>
        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <WorkToBuild>12000</WorkToBuild>
            <Mass>60</Mass>
            <Flammability>1.0</Flammability>
            <Beauty>0</Beauty>
            <JoyGainFactor>1.3</JoyGainFactor>
        </statBases>
        <size>(2,4)</size>
		<comps>
			<li Class="RimEffectExtendedCut.CompProperties_BattleTable">
				<interactionCellOffsets>
					<li>(2,0,0)</li>
					<li>(0,0,1)</li>
				</interactionCellOffsets>
			</li>
		</comps>
        <costStuffCount>80</costStuffCount>
        <costList>
            <Cloth>80</Cloth>
            <WoodLog>30</WoodLog>
        </costList>
        <pathCost>42</pathCost>
        <passability>PassThroughOnly</passability>
        <designationCategory>Joy</designationCategory>
        <designationHotKey>Misc3</designationHotKey>
        <canOverlapZones>false</canOverlapZones>
        <researchPrerequisites>
            <li>ComplexFurniture</li>
        </researchPrerequisites>
        <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    </ThingDef>

</Defs>