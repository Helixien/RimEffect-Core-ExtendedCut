<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Abstract="True" Name="RE_LampBase" ParentName="BuildingBase">
		<thingClass>Building</thingClass>
		<category>Building</category>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<selectable>true</selectable>
		<fillPercent>0.20</fillPercent>
		<pathCost>14</pathCost>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<designationCategory>Furniture</designationCategory>
		<rotatable>false</rotatable>
		<uiIconOffset>(0, 0.03)</uiIconOffset>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.3, 0.6, 0.3)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<comps>
			<li Class="CompProperties_Flickable"/>
		</comps>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>300</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef Abstract="True" Name="RE_OutdoorLampBase" ParentName="RE_LampBase">
		<graphicData>
			<texPath>Things/Building/Furniture/LampStanding</texPath>
		</graphicData>
		<costList>
			<Steel>20</Steel>
		</costList>
		<statBases>
			<Mass>4</Mass>
		</statBases>
	</ThingDef>

	<ThingDef ParentName="RE_OutdoorLampBase" >
		<defName>RE_OutdoorLamp</defName>
		<label>outdoor lamp</label>
		<description>An electrical standing lamp that lights an area. People need light to move and work at full speed.</description>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Building/Furniture/PreFabOutdoorLamp/PreFabOutdoorLamp</texPath>
			<drawSize>(0.8,0.8)</drawSize>
		</graphicData>
		<costList>
			<Steel>20</Steel>
		</costList>
		<statBases>
			<Mass>4</Mass>
		</statBases>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<researchPrerequisites>
			<li>RE_BasicPrefabrication</li>
			<li>Batteries</li>
		</researchPrerequisites>
		<comps>
			<li Class="RimEffectExtendedCut.CompProperties_OutDoorLamp">
				<basePowerConsumption>8</basePowerConsumption>
				<transmitsPower>false</transmitsPower>
				<storedEnergyMax>86</storedEnergyMax>
				<efficiency>0.5</efficiency>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
			<li Class="RimEffectExtendedCut.CompProperties_GlowerExtended">
                <colorOptions>
                    <li>
                        <glowRadius>7</glowRadius>
                        <glowColor>(152,167,250,0)</glowColor>
                        <colorLabel>blue</colorLabel>
                        <texPath>Things/Building/Furniture/PreFabOutdoorLamp/PreFabOutdoorLamp</texPath>
                    </li>
                    <li>
                        <glowRadius>7</glowRadius>
                        <glowColor>(244,182,115,0)</glowColor>
                        <colorLabel>orange</colorLabel>
                        <texPath>Things/Building/Furniture/PreFabOutdoorLampOrange/PreFabOutdoorLampOrange</texPath>
                    </li>
                </colorOptions>
            </li>
		</comps>
	</ThingDef>

</Defs>