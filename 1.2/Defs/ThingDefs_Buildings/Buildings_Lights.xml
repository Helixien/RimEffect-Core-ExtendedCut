<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>RE_WallLamp</defName>
		<label>Wall light</label>
		<description>A wall light that lights an area in a red color.</description>
		<thingClass>RimEffectExtendedCut.Building_WallLight</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/PrefabWallLamps/PrefabWallLamps</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>			
			<color>(0.7,0.1,0.1)</color>
		</graphicData>
		<comps>
		    <li Class="RimEffectExtendedCut.CompProperties_GlowerExtended">
				<colorOptions>
					<li>
						<glowRadius>13</glowRadius>
						<glowColor>(217,0,0,0)</glowColor>
						<colorLabel>Red</colorLabel>
					</li>
					<li>
						<glowRadius>13</glowRadius>
						<glowColor>(50,205,50,0)</glowColor>
						<colorLabel>Green</colorLabel>
					</li>
				</colorOptions>
		    </li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>15</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable" />
		</comps>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<passability>Standable</passability>		
		<fillPercent>0.20</fillPercent>
		<statBases>
			  <MaxHitPoints>10</MaxHitPoints>
			  <WorkToBuild>100</WorkToBuild>
			  <Flammability>1.0</Flammability>
			  <Mass>2</Mass>
		</statBases>
		<size>(1, 1)</size>
		<placeWorkers>
			<li>RimEffectExtendedCut.PlaceWorker_OnWall</li>
		</placeWorkers>
		<costList>
			<Steel>20</Steel>
		</costList>		
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<building>
			<isInert>true</isInert>
			<isEdifice>false</isEdifice>
			<canPlaceOverWall>true</canPlaceOverWall>
			<allowWireConnection>false</allowWireConnection>
		</building>		
		<designationCategory>Furniture</designationCategory>
		<rotatable>true</rotatable>
		<selectable>true</selectable>
		<destroyable>true</destroyable>
		<clearBuildingArea>false</clearBuildingArea>
		<canOverlapZones>true</canOverlapZones>
		<researchPrerequisites>
			<li>ColoredLights</li>
			<li>Electricity</li>
		</researchPrerequisites>
	</ThingDef>	

</Defs>